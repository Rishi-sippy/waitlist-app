datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  password   String
  name       String?
  role       String   @default("user")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model WaitlistEntry {
  id         String   @id @default(cuid())
  storeId    String
  email      String
  name       String?
  phone      String?
  createdAt  DateTime @default(now())
}
